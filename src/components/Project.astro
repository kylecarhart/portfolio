  {/* Vertical line */}
  <div class="space-y-4">
    <a class="sm:text-2xl text-xl font-semibold inline-block" href={project.url}
      >{project.title}</a
    >
    <div class="sm:text-lg max-w-prose">{project.description}</div>
    <ul class="flex flex-wrap">
      {
        project.tech.map((tech) => (
          <li class="text-sm font-mono not-last:after:content-['Â·'] not-last:after:mr-2">
            <a class="hover:underline inline-block" href={tech.url}>
