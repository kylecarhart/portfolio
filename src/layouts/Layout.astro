---
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";
import Header from "../components/Header.astro";

import "@/styles/post.css";
import "@/styles/tailwind.css";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags {...headTags} />
  <body
    class="mx-auto flex min-h-screen max-w-4xl flex-col gap-9 bg-purple-50/20 px-10 py-8 text-sm text-neutral-600 md:gap-20 md:py-16"
  >
    <Header />
    <slot />
  </body>
</html>
